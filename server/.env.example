# MongoDB Connection (REQUIRED)
# Get from MongoDB Atlas: https://cloud.mongodb.com
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/attendance_system

# JWT Secret (REQUIRED - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Server Port (Render will set this automatically)
PORT=5000

# Node Environment
NODE_ENV=development

# Client URL (for CORS in production - set to your Render URL)
# Example: CLIENT_URL=https://your-app-name.onrender.com
CLIENT_URL=

# CORS Allowed Origins (comma-separated, optional)
# Not needed for unified deployment
ALLOWED_ORIGINS=*
